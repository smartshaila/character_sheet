      <h2><%= pluralize(@subclass.errors.count, "error") %> prohibited this subclass from being saved:</h2>

      <ul>
      <% @subclass.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :adventuring_class %><br>
    <%= f.collection_select(:adventuring_class_id, AdventuringClass.all, :id, :name, prompt: true) %>
