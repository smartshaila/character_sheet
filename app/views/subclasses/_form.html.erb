  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :min_level %><br>
    <%= f.number_field :min_level %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
