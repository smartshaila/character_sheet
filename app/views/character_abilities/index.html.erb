<h1>Listing character_abilities</h1>

<table>
  <thead>
    <tr>
      <th>Character</th>
      <th>Ability</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_abilities.each do |character_ability| %>
      <tr>
        <td><%= character_ability.character.name %></td>
        <td><%= character_ability.ability.name %></td>
        <td><%= character_ability.value %></td>
        <td><%= link_to 'Show', character_ability %></td>
        <td><%= link_to 'Edit', edit_character_ability_path(character_ability) %></td>
        <td><%= link_to 'Destroy', character_ability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Character ability', new_character_ability_path %>
