<h1>Listing range_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @range_types.each do |range_type| %>
      <tr>
        <td><%= range_type.name %></td>
        <td><%= range_type.description %></td>
        <td><%= link_to 'Show', range_type %></td>
        <td><%= link_to 'Edit', edit_range_type_path(range_type) %></td>
        <td><%= link_to 'Destroy', range_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

